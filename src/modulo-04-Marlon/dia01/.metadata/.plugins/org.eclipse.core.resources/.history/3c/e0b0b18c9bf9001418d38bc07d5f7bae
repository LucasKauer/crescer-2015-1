package filmater;

import java.util.ArrayList;

public class Filme {
	String nome;
	ArrayList<Ator> listaAtor = new ArrayList<Ator>();
	
	public static void main(String[] args) {
		
	}

	public Filme(String nome) {
		this.nome = nome;
	}
	
	public void novoAtor(Ator ator) {
		listaAtor.add(ator);
	}
	
	public ArrayList<Ator> atoresContainsStr(String str) {
		ArrayList<Ator> listaDeAtoresContainsStr = new ArrayList<Ator>();
		for (Ator ator : listaAtor) {
			
			if (ator.getNome().contains(str)) {
				listaDeAtoresContainsStr.add(ator);
			}
			
		}
		return listaDeAtoresContainsStr;
	}
	
	public String toString() {
		return this.nome;
	}
}