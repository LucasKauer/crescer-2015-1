package listator;

import java.io.File;

import javax.swing.JOptionPane;

public class Teste {
	
	public static void main(String[] args) {
		
		for (String arguments : args) {
			
			buscarEMostrarConteudoDir(arguments);
			
		}
		
	}
	
	public static void buscarEMostrarConteudoDir(String args) {
		File f = new File(args); 
		File arrF[] = f.listFiles(); 
		
		for (int i = 0; i < arrF.length; i++) { 
			File arq = arrF[i]; 
			System.out.println(arq.getName()); 
		}
	}
}