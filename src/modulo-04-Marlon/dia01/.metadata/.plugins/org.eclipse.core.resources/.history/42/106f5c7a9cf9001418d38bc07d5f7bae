package filmater;

import java.util.ArrayList;

public class Filme {
	String nome;
	ArrayList<Ator> listActor = new ArrayList<Ator>();
	
	public static void main(String[] args) {

		Ator a1 = new Ator("Ator 1");
		Ator a2 = new Ator("Ator 2");
		
		Filme f = new Filme("Filme 1");
		
		f.newActor(a1);
		f.newActor(a2);
		
		System.out.println(f.atoresContainsStr("Ator"));
	}

	public Filme(String name) {
		this.nome = name;
	}
	
	public void newActor (Ator actor) {
		listActor.add(actor);
	}
	
	public ArrayList<Ator> atoresContainsStr(String str) {
		ArrayList<Ator> listContains = new ArrayList<Ator>();
		for (Ator actor : listActor) {
			
			if (actor.getNome().contains(str)) {
				listContains.add(actor);
			}
			
		}
		return listContains;
	}
	
	public String toString() {
		return "Filme: " + this.nome;
	}
}